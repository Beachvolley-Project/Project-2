<main class="container">
  <div class="container col-12 col-md-6 col-lg-4 mt-5">
    <div
      class="card border-secondary shadow mb-5 bg-body rounded align-items-center p-2"
      style="width: 18rem;"
    >
      <div class="card-body">
        <h2 class="card-title">Organize a new beach-volleyball match!</h2>
      </div>
      <form action="/events/new" method="POST">
        <label for="title">Title: </label>
        <input type="text" id="title" name="title" />

        <label for="date">Date: </label>
        <!-- <input type="date" id="date" name="date" />

  <label for="meeting-time">Choose a time for your appointment:</label> -->
        <input
          type="datetime-local"
          id="date"
          name="date"
          value=""
          min=""
          max=""
        />

        <label for="capacity">Capacity: </label>
        <input type="number" id="capacity" name="capacity" min="4" max="10" />

        <label for="location">Location: </label>

        <select name="location">

          {{#each locationList}}
            <option value="{{_id}}">{{name}}</option>
          {{/each}}

        </select>

        <button type="submit">Add this event to Meeture calender!</button>
      </form>
    </div>
  </div>
</main>